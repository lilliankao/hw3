<h1><%= @place["name"] %></h1>

<p><a href="/places" >Back to places</a></p>

<ul>
  <% for entry in @entries %>
    <li>
       <h2> <%= entry["title"] %> </h2>
        <p> <%= entry["posted_on"] %> </p>
        <p><%= entry["description"] %> </p>
    </li>
  <% end %>
</ul>

<p><a href="/entries/new?place_id=<%= @place["name"] %>">New post</a></p>



